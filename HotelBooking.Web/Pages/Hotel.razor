            <div class="hotel-info-wrapper">
                <!-- Информационный блок отеля -->
                <div class="hotel-info-block">
                    <div class="rating-row">
                        <!-- Рейтинг отеля -->
                        <div class="rating-badge accented-rating-background rating-text">@hotel.Rating</div>
                    </div>
                    <div class="separator">
                        <!-- Информация о жилье -->
