            }

            .rating-value, .rating-text {
                font-size: 24px;
                line-height: 28px;
            }

            .accented-rating-background {
                background: var(--rating-with-text-accented-background);
            }

            .rating-badge {
                border-radius: 4px;
                color: var(--rating-with-text-color);
                font-size: 16px;
                font-weight: 500;
                line-height: 24px;
                padding: 2px 8px;
                user-select: none;
            }

        </style>
        <!-- HTML-структура для карусели и информационного блока отеля -->
